<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="
				http://www.springframework.org/schema/beans
				http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/util
                http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="auditoriumServiceImpl" class="com.epam.spring.core.service.impl.AuditoriumServiceImpl">
		<property name="auditoriums">
			<util:set set-class="java.util.HashSet">
				<ref bean="auditorium_first_stage"/>
				<ref bean="auditorium_second_stage"/>
			</util:set>
		</property>
	</bean>
	
	<bean id="auditorium_first_stage" class="com.epam.spring.core.domain.Auditorium">
    		<property name="name" value="${auditorium.first.name}"/>
    	   	<property name="numberOfSeats" value="${auditorium.first.numberOfSeats}"/>	
       		<property name="vipSeats" value = "#{'${auditorium.first.vipSeats}'.split(',')}"/>    
    </bean>
	<bean id="auditorium_second_stage" class="com.epam.spring.core.domain.Auditorium"> 
    		<property name="name" value="${auditorium.second.name}"/>
    	   	<property name="numberOfSeats" value="${auditorium.second.numberOfSeats}"/>	
       		<property name="vipSeats" value = "#{'${auditorium.first.vipSeats}'.split(',')}"/>    
	</bean>
	
    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
                <value>classpath:auditoriums.properties</value>
        </property> 
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>
    

  	
</beans>